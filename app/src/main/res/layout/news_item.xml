<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/title_news_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/colorNewsTitle"
        android:textSize="18sp"
        tools:text="News Title" />


    <TextView
        android:id="@+id/content_news_item"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/title_news_item"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_launcher_background"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_launcher_background"
        android:ellipsize="end"
        android:maxLines="4"

        android:textColor="@color/colorNewsContent"
        tools:text="News Description" />


</RelativeLayout>